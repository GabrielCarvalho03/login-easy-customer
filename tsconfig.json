{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"]
    },
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "cypress", "**/*.spec.tsx"]
}
